<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        app:civ_border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:hint="Имя"
        android:textAlignment="center"
        android:textSize="18dp"
        android:background="@drawable/edit_text"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:drawableStart="@drawable/edit"
        />

    <EditText
        android:id="@+id/set_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_user_name"
        android:hint="Брат, ты брат если брат"
        android:textAlignment="center"
        android:textSize="18dp"
        android:background="@drawable/edit_text"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:drawableStart="@drawable/status"
        />

    <Button
        android:id="@+id/save_user_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_user_status"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:drawableStart="@drawable/save"
        android:hint="Сохранить"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="18dp" />


</RelativeLayout>