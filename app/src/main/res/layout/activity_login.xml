<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#808080">

    <Button

        android:id="@+id/login_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="1dp"
        android:maxLines="1"
        android:text="Введите свой номер телефона"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title"
        android:padding="20dp"
        android:text="DzaniscaMess отправит SMS сообщение"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/login_phone_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Номер телефона"
        android:textColorHint="@color/white"
        android:minHeight="48dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/login_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:textColor="@color/white"
        android:layout_below="@+id/login_phone_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />


    <EditText
        android:id="@+id/login_verification_input"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:hint="введите код подтверждения"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:textColorHint="@color/white"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/login_verification_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подтвердить"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textColor="@color/white"
        android:layout_below="@+id/login_phone_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/register_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация через e-mail"
        android:textColor="@color/white"
        android:layout_below="@+id/login_next_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />
</RelativeLayout>